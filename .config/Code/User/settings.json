{
    "workbench.sideBar.location": "right",
    "workbench.colorTheme": "Dracula",
    "latex-workshop.latex.autoBuild.run": "onSave",
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                    "-xelatex",
                    "-synctex=1",
                    "-interaction=nonstopmode",
                    "-file-line-error",
                    "%DOC%"
            ]
        }
    ],
    "editor.inlineSuggest.enabled": true,
    "editor.fontSize": 16
}